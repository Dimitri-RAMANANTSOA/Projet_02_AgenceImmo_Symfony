{% extends 'base.html.twig' %}

{% block title %}Tous nos biens{% endblock %}

{% block body %}
<div class="p-5 mb-4 bg-light rounded-3">
    <div class="container">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-4">{{ form_row(form.minSurface) }}</div>
            <div class="col-md-4">{{ form_row(form.maxPrice) }}</div>
            <div class="col-md-4">{{ form_row(form.options) }}</div>
            <mapbox-address-autofill>
                <div class="col-md-2">{{ form_row (form.address_search)}}</div>
                <div class="col-md-2">{{ form_row (form.city_search)}}</div>
            </mapbox-address-autofill>
            <div class="col-md-4">{{ form_row(form.distance) }}</div>
            <div class="col-md-4"><button class="btn btn-primary">Rechercher</button></div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
<div class="container mt-4">
    <h1>Voir tous nos biens</h1>
    <div class="row flex">
        {% for property in properties %}
            {% include 'property/_property.html.twig' %}
        {% endfor %}
    </div>
    {# display navigation #}
    <div class="navigation mt-4">
        {{ knp_pagination_render(properties) }}
    </div>
</div>

{% endblock %}
